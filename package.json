{
  "name": "export-project-html",
  "configSchema": {
    "fontSize": {
      "type": "integer",
      "default": 12
    },
    "openIn": {
      "type": "string",
      "default": "atom",
      "enum": [
        "atom",
        "browser",
        "none"
      ]
    },
    "style": {
      "type": "string",
      "default": "github",
      "title": "Stylesheet",
      "description": "Choose from [highlight.js styles.](https://github.com/isagalaev/highlight.js/tree/master/src/styles) ."
    },
    "lineNumber": {
      "type": "object",
      "properties": {
        "use": {
          "type": "boolean",
          "default": true
        },
        "styles": {
          "type": "string",
          "title": "StyleSheet",
          "default": "opacity: 0.5;"
        }
      }
    },
    "tabWidth": {
      "type": "integer",
      "default": 4
    },
    "file_types_to_convert_to_html": {
      "type": "array",
      "default": [
        "1.ada",
        "2.ada",
        "ada",
        "adb",
        "ads",
        "asm",
        "bas",
        "bash",
        "bat",
        "c",
        "c++",
        "cbl",
        "cc",
        "class",
        "clj",
        "cob",
        "cpp",
        "cs",
        "csh",
        "cxx",
        "d",
        "diff",
        "e",
        "el",
        "f",
        "f77",
        "f90",
        "fish",
        "for",
        "fth",
        "ftn",
        "go",
        "groovy",
        "h",
        "hh",
        "hpp",
        "hs",
        "htm",
        "hxx",
        "java",
        "js",
        "jsx",
        "jsp",
        "ksh",
        "kt",
        "lhs",
        "lisp",
        "lua",
        "m",
        "m4",
        "nim",
        "patch",
        "php",
        "pl",
        "po",
        "pp",
        "py",
        "r",
        "rb",
        "rs",
        "s",
        "scala",
        "sh",
        "swg",
        "swift",
        "v",
        "vb",
        "vcxproj",
        "xcodeproj",
        "xml",
        "zsh",
        "log",
        "txt"
      ]
    },
    "ignored_extensions": {
      "type": "array",
      "default": [
        ".pyc"
      ]
    },
    "ignored_dirs": {
      "type": "array",
      "default": [
        "__pycache__",
        ".git",
        "build",
        "WebSite"
      ]
    },
    "download_external_stylesheets": {
      "type": "boolean",
      "default": false
    },
    "download_external_scripts": {
      "type": "boolean",
      "default": false
    }
  },
  "main": "./lib/export-project-html",
  "version": "2.5.8",
  "description": "Export entire code project as html files for web publishing",
  "keywords": [],
  "activationCommands": {
    "atom-workspace": "export-project-html:export"
  },
  "repository": "https://github.com/emendir/Export-Project-to-HTML---Atom-Plugin.git",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-space-pen-views": "^2.1.0",
    "underscore-plus": "^1.6.6",
    "highlight.js": "^8.7.0",
    "roaster": "^1.2.0",
    "dompurify": "^2.0.17",
    "fs-plus": "^3.0.0",
    "marked": "^0.7.0",
    "cheerio": "^1.0.0-rc.3",
    "yaml-front-matter": "^4.0.0"
  }
}
